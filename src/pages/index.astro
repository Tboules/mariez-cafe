<Layout title="Uplifted Coffee">

  <header class="header">
    <div class="container">
        <img src="/img/header.png" alt="">
    </div>
</header>
  
  <ul class='menu-item-list'>
    {menuItems.map(item => (
      <li class='menu-item'>
        <a href={`/order?drinkId=${item.id}`}>
          <h3>{item.name}</h3>
          <p>{item.description}</p>
        </a>
      </li>
    ))}
  </ul>

